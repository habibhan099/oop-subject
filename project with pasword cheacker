â€Ž    // ---------- Password Strength Checker ----------
â€Ž    static void checkPasswordStrength(String password) {
â€Ž        int length = password.length();
â€Ž
â€Ž        boolean hasLetter = password.matches(".[a-zA-Z].");
â€Ž        boolean hasDigit = password.matches(".[0-9].");
â€Ž        boolean hasSpecial = password.matches(".[!@#$%^&()_+\\-={}\\[\\]:;\"'<>,.?/].*");
â€Ž
â€Ž        if (length < 6) {
â€Ž            System.out.println("Password Strength: âŒ Too Short");
â€Ž        } else if (length <= 10) {
â€Ž            if ((hasLetter && !hasDigit) || (!hasLetter && hasDigit)) {
â€Ž                System.out.println("Password Strength: Weak");
â€Ž            } else if (hasLetter && hasDigit) {
â€Ž                System.out.println("Password Strength: Medium");
â€Ž            } else {
â€Ž                System.out.println("Password Strength:  Weak");
â€Ž            }
â€Ž        } else {
â€Ž            if (hasLetter && hasDigit && hasSpecial) {
â€Ž                System.out.println("Password Strength: Strong");
â€Ž            } else {
â€Ž                System.out.println("Password Strength: Medium");
â€Ž            }
â€Ž        }
â€Ž    }
â€Ž
â€Ž    // ---------- PIN Validator ----------
â€Ž    static boolean isValidPIN(String pin) {
